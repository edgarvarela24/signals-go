name: Go CI

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v4

    - name: Set up Go
      uses: actions/setup-go@v5
      with:
        go-version: '1.22'

    - name: Install Mage
      run: go install github.com/magefile/mage@latest

    - name: Run CI checks
      # The GOBIN env var ensures the mage binary is on the PATH
      run: |
        export GOBIN=$(go env GOBIN)
        export PATH=$PATH:$GOBIN
        mage ci